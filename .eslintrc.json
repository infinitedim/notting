{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb",
    "prettier",
    "plugin:prettier/recommended"
  ],
  "overrides": [
    {
      "files": ["*.js", "*.jsx", "*.cjs", "*.mjs"]
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off",
    "import/no-extraneous-dependencies": "off",
    "react/jsx-no-bind": "off",
    "no-shadow": "off",
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "prettier/prettier": [
      "error",
      {
        "semi": true,
        "tabWidth": 2,
        "endOfLine": "auto",
        "printWidth": 80,
        "singleQuote": false,
        "jsxSingleQuote": false,
        "trailingComma": "all",
        "singleAttributePerLine": true
      }
    ]
  }
}
